{
    "name": "@wbk--mern-playground-v2/vite-starter-app",
    "private": true,
    "version": "0.1.2",
    "type": "module",
    "scripts": {
        "develop": "concurrently \"yarn compile:watch\" \"vite --host\"",
        "compile": "yarn tsc --noEmit",
        "compile:watch": "yarn tsc --noEmit --watch",
        "build": "export NODE_ENV=production && yarn compile && yarn lint && vite build",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint --config eslint.config.js .",
        "lint:fix": "eslint --config eslint.config.js --fix ."
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^16.0.1",
        "@types/jest": "^29.5.14",
        "@types/react": "^18.2.27",
        "@types/react-dom": "^18.3.1",
        "@vitejs/plugin-react": "^4.0.3",
        "@vitest/coverage-v8": "2.1.5",
        "@vitest/ui": "^2.1.5",
        "eslint": "^9.15.0",
        "eslint-plugin-jest-dom": "^5.1.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "eslint-plugin-testing-library": "^6.1.0",
        "eslint-plugin-vitest": "^0.5.4",
        "globals": "^15.12.0",
        "jsdom": "^25.0.1",
        "react": "^18.3.1",
        "react-dom": "^18.2.0",
        "sass": "^1.69.5",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.15.0",
        "vite": "^5.4.11",
        "vitest": "^2.1.5"
    }
}
