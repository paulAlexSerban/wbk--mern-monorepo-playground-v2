# ----------------- BUILDER STAGE -----------------
FROM wbk--mern-playground-v2__core:latest as builder
COPY ./frontend/apps/_vite-starter-app ./frontend/apps/_vite-starter-app
RUN yarn install
RUN yarn build:vite-starter-app

# ----------------- PRODUCTION STAGE -----------------
FROM nginx:latest as prod
RUN ln -sf /dev/stdout /var/log/nginx/access.log \
	&& ln -sf /dev/stderr /var/log/nginx/error.log
COPY --from=builder /usr/src/app/frontend/apps/_vite-starter-app/dist /usr/share/nginx/html
COPY ./frontend/apps/_vite-starter-app/nginx/default.conf /etc/nginx/conf.d/default.conf